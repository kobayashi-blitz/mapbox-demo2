<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:background="@drawable/card_border">

        <ImageView
            android:id="@+id/markerThumbnail"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/marker_search15"
            android:contentDescription="マーカー画像"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/markerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="マーカー名"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingTop="8dp"/>

        <TextView
            android:id="@+id/markerCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="カテゴリ: 登録"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="#888888"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/markerPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="必要チケット：1枚"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="#E57C23"
            android:paddingTop="4dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>